
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to create their own user profile document upon signup
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to read/update/delete their own profile
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      // Allow admin/owner to read/update/delete any user profile
      allow read, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Allow authenticated users to read from the announcements collection
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      // Allow admin/owner to create, update, and delete announcements
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Allow users to write their own acknowledgements
    match /announcements/{announcementId}/acknowledgedBy/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow admin/owner to read all acknowledgements
      allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Rules for shifts collection
    match /shifts/{shiftId} {
      // Allow users to read their own shifts
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow users to update their own shifts (e.g., changing status)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      // Allow admin/owner to read, create, update, delete all shifts
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Rules for projects collection
    match /projects/{projectId} {
        // Allow all authenticated users to read projects
        allow read: if request.auth != null;
        // Allow admin/owner to create, update, and delete projects
        allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
        
        // Rules for files subcollection
        match /files/{fileId} {
            // Allow all authenticated users to read file documents
            allow read: if request.auth != null;
            // Allow any authenticated user to create (upload) files
            allow create: if request.auth != null;
            // Allow the user who uploaded the file or an admin/owner to delete it
            allow delete: if request.auth != null && (resource.data.uploaderId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']);
        }
    }
    
    // Rules for global settings
    match /settings/{settingId} {
        // Allow admin/owner to read and write all settings
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
  }
}
