rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin or owner
    function isPrivileged(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }

    // Users can read and update their own profile, but cannot change their role.
    // Admins can manage users. New user profiles are created via signup.
    match /users/{userId} {
      allow read;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId
                    || (isPrivileged(request.auth.uid) && resource.data.role != 'owner');
      allow delete: if false; // Do not allow users to be deleted from the client
    }
    
    // Authenticated users can read projects. Writes should happen via backend process.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write: if isPrivileged(request.auth.uid);

      // Authenticated users can read files associated with a project.
      // Writes should be handled by a secure backend/syncing process.
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow write: if false; // Disallow all client-side writes
      }
    }

    // A user can read their own shifts.
    // Shifts are created/updated in bulk by privileged users.
    match /shifts/{shiftId} {
      allow read: if request.auth.uid == resource.data.userId || isPrivileged(request.auth.uid);
      allow update: if request.auth.uid == resource.data.userId; // For status updates
      allow create, delete: if isPrivileged(request.auth.uid);
    }
  }
}
