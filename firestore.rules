rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user has a specific role (admin or owner)
    function isPrivilegedUser(userId) {
      let userRole = get(/databases/$(database)/documents/users/$(userId)).data.role;
      return userRole == 'admin' || userRole == 'owner';
    }

    // --- Users Collection ---
    match /users/{userId} {
      // Anyone can read their own user profile
      allow read: if request.auth != null && request.auth.uid == userId;

      // Authenticated admins or owners can read any user profile
      allow read: if request.auth != null && isPrivilegedUser(request.auth.uid);
      
      // Allow users to create their own profile document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow admins and owners to update user profiles (e.g., employmentType, operativeId)
      allow update: if request.auth != null && isPrivilegedUser(request.auth.uid);

      // Only the owner can delete a user record
      allow delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';

      // --- Push Subscriptions Subcollection ---
      match /pushSubscriptions/{subscriptionId} {
        // A user can manage their own push subscriptions
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- Shifts Collection ---
    match /shifts/{shiftId} {
      // Any authenticated user can read shifts
      allow read: if request.auth != null;

      // Authenticated admins or owners can create, update, and delete shifts
      allow write: if request.auth != null && isPrivilegedUser(request.auth.uid);

      // A user can update their own shift (e.g., to change its status)
      // This is less restrictive and allows the assigned user to update fields like 'status' and 'notes'
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // --- Projects Collection ---
    match /projects/{projectId} {
        // Any authenticated user can read project details
        allow read: if request.auth != null;
        
        // Only admins and owners can create, update, or delete projects
        allow write: if request.auth != null && isPrivilegedUser(request.auth.uid);

        // --- Files Subcollection ---
        match /files/{fileId} {
            // Any authenticated user can read files
            allow read: if request.auth != null;

            // Any authenticated user can create (upload) a file
            allow create: if request.auth != null;
            
            // Only the original uploader, an admin, or the owner can delete a file
            allow delete: if request.auth != null && (request.auth.uid == resource.data.uploaderId || isPrivilegedUser(request.auth.uid));
        }
    }

    // --- Announcements Collection ---
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements
      allow read: if request.auth != null;

      // Only admins and owners can create, update, or delete announcements
      allow write: if request.auth != null && isPrivilegedUser(request.auth.uid);
    }
    
     // --- Settings Collection ---
    match /settings/{settingId} {
      // Only the owner can read or write to the settings collection
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}
