
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // USERS
    // - Allow users to read their own profile.
    // - Allow users to create their own profile during signup.
    // - Allow admins/owners to read all user profiles.
    // - Allow users to write to their own 'acknowledgedAnnouncements' subcollection.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;

      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
      
      // THIS IS THE CRITICAL FIX: Allow a user to create a document in their own subcollection.
      match /acknowledgedAnnouncements/{announcementId} {
        allow create: if request.auth.uid == userId;
        allow read: if request.auth.uid == userId;
      }
    }

    // SETTINGS
    // - Only admins/owners can read/write global settings.
    match /settings/{docId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // PROJECTS & FILES
    // - Allow any authenticated user to read projects and their associated files.
    // - Allow admin/owner to write/delete projects and files.
    // - Allow file uploader to delete their own file.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow write, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null; // File metadata creation
        allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'] || resource.data.uploaderId == request.auth.uid;
      }
    }

    // SHIFTS
    // - Allow users to read only their own shifts.
    // - Allow admins/owners to read all shifts.
    // - Allow a user to update their own shift (e.g., to change status).
    // - Allow admins/owners to create/update/delete any shift.
    match /shifts/{shiftId} {
      allow read: if resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow update: if resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // ANNOUNCEMENTS
    // - Allow any authenticated user to read all announcements.
    // - Only allow admin/owner to create, update, or delete announcements.
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
  }
}
