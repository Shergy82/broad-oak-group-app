rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      // Allow users to create their own user document during sign-up
      allow create: if request.auth.uid == userId;
      // Allow users to update their own profile data
      allow update: if request.auth.uid == userId;
      // Only the owner can delete user accounts
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
      // Allow users to manage their own push notification subscriptions
      allow read, write: if request.auth.uid == userId;
    }

    // Settings Collection (Owner only)
    match /settings/{docId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Shifts Collection
    match /shifts/{shiftId} {
      function isOwnerOrAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'admin'];
      }
      
      allow read: if request.auth.uid != null;
      allow create: if isOwnerOrAdmin();
      allow delete: if isOwnerOrAdmin();
      
      // Allow admins/owners to update any field.
      // Allow assigned users to update only status, notes, and confirmedAt.
      allow update: if isOwnerOrAdmin() || 
                       (resource.data.userId == request.auth.uid &&
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'notes', 'confirmedAt']));
    }

    // Projects Collection
    match /projects/{projectId} {
      function isOwnerOrAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'admin'];
      }
      allow read: if request.auth.uid != null;
      allow create, update, delete: if isOwnerOrAdmin();
    }
    // Files Subcollection within Projects
    match /projects/{projectId}/files/{fileId} {
      function isOwnerOrAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'admin'];
      }
      function isUploader() {
        return resource.data.uploaderId == request.auth.uid;
      }
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null;
      allow delete: if isOwnerOrAdmin() || isUploader();
    }

    // Announcements Collection
    match /announcements/{announcementId} {
       function isOwnerOrAdmin() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'admin'];
      }
      allow read: if request.auth.uid != null;
      allow create, update, delete: if isOwnerOrAdmin();
    }
     match /announcements/{announcementId}/acknowledgedBy/{userId} {
        allow read: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['owner', 'admin'];
        allow create: if request.auth.uid == userId;
     }
  }
}
