rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Users Collection ---
    // A user can be created by the client-side sign-up form.
    // Users can read and update their OWN profile.
    // Role/status changes are restricted to admins/owners via Cloud Functions.
    match /users/{userId} {
      allow create: if request.auth.uid == userId;
      allow read, update: if request.auth.uid == userId;

      // --- Push Subscriptions Subcollection ---
      // A user can manage their own push notification subscriptions.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // --- Shifts Collection ---
    // Logged-in users can see only their own shifts.
    // Admins and owners can see all shifts.
    // Users can update specific fields (status, notes) on their own shifts.
    // Admins and owners can create, update, and delete any shift.
    match /shifts/{shiftId} {
      allow read: if request.auth.uid != null && (resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']);
      allow create, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow update: if request.auth.uid != null && (
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']) ||
        (resource.data.userId == request.auth.uid && request.resource.data.keys().hasAny(['status', 'notes', 'confirmedAt']))
      );
    }

    // --- Projects Collection ---
    // Any authenticated user can read the list of projects and their files.
    // Creation and deletion of projects and files are restricted to admins/owners and handled via Cloud Functions.
    match /projects/{projectId} {
      allow read: if request.auth.uid != null;
      allow create, update, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      
      // --- Files Subcollection ---
      // Any authenticated user can read files.
      // Any authenticated user can upload (create) files.
      // Deletion is restricted to owners/admins or the original uploader, handled by a Cloud Function.
      match /files/{fileId} {
         allow read, create: if request.auth.uid != null;
         allow delete: if request.auth.uid != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'] || resource.data.uploaderId == request.auth.uid);
      }
    }
    
    // --- Announcements Collection ---
    // Any authenticated user can read announcements.
    // Admins/owners can create, update, and delete announcements.
    match /announcements/{announcementId} {
        allow read: if request.auth.uid != null;
        allow write, delete: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // --- Settings Collection ---
    // Only the owner can read or write to the settings.
    match /settings/{settingId} {
      allow read, write: if request.auth.uid != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}
