
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isPrivilegedUser() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isPrivilegedUser();
    }
    
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
    }

    match /shifts/{shiftId} {
      allow read: if request.auth.uid == resource.data.userId || isPrivilegedUser();
      allow create: if isPrivilegedUser();
      allow update: if request.auth.uid == resource.data.userId || isPrivilegedUser();
      allow delete: if isPrivilegedUser();
    }
    
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isPrivilegedUser();
    }

    match /projects/{projectId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isPrivilegedUser();
    }

    match /projects/{projectId}/files/{fileId} {
        allow read: if request.auth != null;
        allow create: if request.auth.uid == request.resource.data.uploaderId;
        allow delete: if isPrivilegedUser() || request.auth.uid == resource.data.uploaderId;
    }

    match /health_and_safety_files/{fileId} {
      // Explicitly allow list and get for any authenticated user.
      allow list, get: if request.auth != null;
      // Explicitly check role for create and delete operations.
      allow create, delete: if isPrivilegedUser();
    }
  }
}
