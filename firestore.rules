rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read/write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      // Anyone can create a user account (signup)
      allow create: if request.auth.uid != null;
      
      // Allow users to manage their own push subscriptions
      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Shifts can be read by their assigned user or any admin/owner
    match /shifts/{shiftId} {
      allow read: if request.auth.uid == resource.data.userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      // Only admins/owners can create, update, or delete shifts
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Projects can be read by any authenticated user
    match /projects/{projectId} {
      allow read: if request.auth != null;
      // Projects can only be created/updated by admins/owners
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      // Deletion is handled by a Cloud Function, so client-side delete is disallowed.
      allow delete: if false;

      // Files can be read by anyone, but write/delete permissions are more specific
      match /files/{fileId} {
        allow read: if request.auth != null;
        // Anyone can upload a file (create)
        allow create: if request.auth != null;
        // Only the uploader or an admin/owner can delete a file (handled by a function)
        allow delete, update: if false; 
      }
    }
    
    // Settings can only be read/written by the owner
    match /settings/{settingId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Announcements
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements
      allow read: if request.auth != null;
      // Only admins/owners can create or update announcements
      allow create, update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      // Deletion is handled by a Cloud Function, so client-side delete is disallowed.
      allow delete: if false;
      
      // Acknowledgements subcollection
      match /acknowledgedBy/{userId} {
        // Any authenticated user can read the list of who acknowledged
        allow read: if request.auth != null;
        // A user can ONLY create an acknowledgement for themselves
        allow create: if request.auth.uid == userId;
        // No one can update or delete acknowledgements from the client
        allow update, delete: if false;
      }
    }

    // Health & Safety files are managed by the owner
    match /health_and_safety_files/{fileId} {
        allow read: if request.auth != null;
        // Only owner can create, update or delete
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}
