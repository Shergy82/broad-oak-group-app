rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is an admin or owner
    function isPrivileged() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Helper function to check if the user is the owner of the account
    function isOwner() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    
    // USERS collection
    match /users/{userId} {
      // Allow user to create their own document during sign-up
      allow create: if request.auth.uid == userId;

      // Users can read their OWN document. Admins/Owners can read any user document.
      allow read: if request.auth.uid == userId || isPrivileged();
      
      // Users can update their OWN document. Admins/Owners can update any user document.
      // This is for future profile editing functionality.
      allow update: if request.auth.uid == userId || isPrivileged();

      // ONLY the owner can delete users (except for themselves).
      allow delete: if isOwner() && request.auth.uid != userId;
      
      // --- Push Subscriptions Subcollection ---
      // A user can manage their own push notification subscriptions.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // SHIFTS collection
    match /shifts/{shiftId} {
        // Any authenticated user can read shifts.
        allow read: if request.auth != null;
        
        // Admins/owners can create or delete shifts.
        allow create, delete: if isPrivileged();
        
        // Admins/owners can update any field.
        // A regular user can ONLY update the 'status' and 'notes' fields of a shift assigned to them.
        allow update: if isPrivileged() || (request.auth.uid == resource.data.userId && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'notes', 'confirmedAt']));
    }

    // PROJECTS collection & files subcollection
    match /projects/{projectId} {
        // Any authenticated user can view projects.
        allow read: if request.auth != null;
        
        // Only admins/owners can create, update, or delete projects.
        allow write: if isPrivileged();

        // FILES subcollection
        match /files/{fileId} {
            // Any authenticated user can view files.
            allow read: if request.auth != null;

            // Any authenticated user can upload files.
            allow create: if request.auth != null;
            
            // Users can delete their own files, admins/owners can delete any file.
            allow delete: if request.auth.uid == resource.data.uploaderId || isPrivileged();
        }
    }
    
    // ANNOUNCEMENTS collection
    match /announcements/{announcementId} {
        // Any authenticated user can read announcements.
        allow read: if request.auth != null;
        
        // Only admins/owners can create/update/delete announcements.
        allow write: if isPrivileged();
        
        match /acknowledgedBy/{userId} {
             // A user can only acknowledge for themselves.
             allow write: if request.auth.uid == userId;
             // Only privileged users can see who has acknowledged.
             allow read: if isPrivileged();
        }
    }
    
    // SETTINGS collection
    match /settings/{settingId} {
        // Only the owner can read or write to the settings collection.
        allow read, write: if isOwner();
    }
  }
}
