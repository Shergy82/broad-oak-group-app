rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin or owner
    function isOwnerOrAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }

    // Helper function to check if a user is the owner
    function isOwner(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role == 'owner';
    }

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isOwner(request.auth.uid);
      
      // Push subscriptions can be created/deleted by the user they belong to.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Shifts collection
    match /shifts/{shiftId} {
      allow read: if request.auth != null;
      // Allow create, update, delete for admin/owner roles.
      allow write: if isOwnerOrAdmin(request.auth.uid);
    }

    // Settings collection
    match /settings/{docId} {
      // Only the owner can read or write to the settings collection.
      allow read, write: if isOwner(request.auth.uid);
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow create: if isOwnerOrAdmin(request.auth.uid);
      allow delete: if isOwnerOrAdmin(request.auth.uid);

      // This is the crucial rule:
      // Allow a user to update an announcement IF AND ONLY IF:
      // 1. The only field being changed is the `viewedBy` map.
      // 2. The key being added to the map is the user's own UID.
      // 3. No other fields (title, content, etc.) are being modified.
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['viewedBy'])
                    && request.resource.data.viewedBy.diff(resource.data.viewedBy).affectedKeys()
                       .hasOnly([request.auth.uid]);
    }
    
    // Projects collection
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create, delete: if isOwnerOrAdmin(request.auth.uid);
      
      // Files subcollection
      match /files/{fileId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        
        // Deletion is handled by the `deleteProjectFile` Cloud Function,
        // which performs its own permission checks. Direct client deletion is disallowed.
        allow delete: if false; 
      }
    }
  }
}
