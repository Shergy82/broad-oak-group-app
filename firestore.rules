rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to create their own user document upon signup
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read announcements
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
    }

    // Allow authenticated users to manage their own acknowledgements
    match /announcements/{announcementId}/acknowledgedBy/{userId} {
        allow create, read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read project and file data
    match /projects/{projectId} {
      allow read: if request.auth != null;
    }
    match /projects/{projectId}/files/{fileId} {
      allow read: if request.auth != null;
      // Allow users to upload files to any project
      allow create: if request.auth != null;
    }

    // Allow users to manage their own shifts
    match /shifts/{shiftId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']
      );
    }
    
    // Allow owner to read notification settings
    match /settings/notifications {
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }

    // Fallback to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
