rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default-deny all writes.
    match /{document=**} {
      allow write: if false;
    }

    // Allow authenticated users to read any document.
    // This is a simple, broad rule to ensure the app is functional.
    // It can be tightened later if needed.
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // SPECIFIC WRITE/UPDATE/DELETE RULES
    
    // Users can create and update their own user document.
    match /users/{userId} {
      allow create, update: if request.auth.uid == userId;
      // Users can manage their own push subscriptions.
      match /pushSubscriptions/{subId} {
        allow write: if request.auth.uid == userId;
      }
    }
    
    // Users can update their own shifts.
    match /shifts/{shiftId} {
      allow update: if request.auth.uid == resource.data.userId;
    }

    // Project files can be created by any user, but only deleted by the uploader or an admin.
    match /projects/{projectId}/files/{fileId} {
        allow create: if request.auth != null;
        allow delete: if request.auth.uid == resource.data.uploaderId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // ADMIN/OWNER-ONLY WRITE/UPDATE/DELETE RULES

    // Privileged users can manage shifts.
    match /shifts/{shiftId} {
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Privileged users can manage announcements.
    match /announcements/{announcementId} {
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
    
    // Privileged users can create projects.
    match /projects/{projectId} {
      allow create: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
    
    // Privileged users can manage Health & Safety files.
    match /health_and_safety_files/{fileId} {
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Owners can manage user roles.
    match /users/{userId} {
      allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}
