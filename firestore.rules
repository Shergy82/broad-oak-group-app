rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isUser(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isPrivilegedUser() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    match /users/{userId} {
      // A user can read their own document
      allow read: if isUser(userId);
      // A user can update their own document
      allow update: if isUser(userId);
      // Any authenticated user can create their own document (signup)
      allow create: if isUser(userId);
      
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if isUser(userId);
      }
    }

    match /shifts/{shiftId} {
      // Privileged users can read/write any shift
      allow read, write: if isPrivilegedUser();
      // Users can only read/update their own shifts
      allow read, update: if isUser(resource.data.userId);
    }
    
    match /projects/{projectId} {
      // Any authenticated user can read projects
      allow read: if request.auth != null;
      // Only privileged users can write to projects
      allow write: if isPrivilegedUser();
      
      match /files/{fileId} {
        // Any authenticated user can read project files
        allow read: if request.auth != null;
        // Any authenticated user can create project files
        allow create: if request.auth != null;
        // The uploader or a privileged user can delete/update
        allow update, delete: if isUser(resource.data.uploaderId) || isPrivilegedUser();
      }
    }
    
    match /health_and_safety_files/{fileId} {
      // Any authenticated user can read H&S files
      allow read: if request.auth != null;
      // Only privileged users can write H&S files
      allow write: if isPrivilegedUser();
    }
    
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements
      allow read: if request.auth != null;
      // Only privileged users can write announcements
      allow write: if isPrivilegedUser();
    }
  }
}
