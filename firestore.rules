rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user has an admin or owner role
    function isAdminOrOwner(userId) {
      let userRole = get(/databases/$(database)/documents/users/$(userId)).data.role;
      return userRole in ['admin', 'owner'];
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Users Collection
    match /users/{userId} {
      // Anyone can create their own user document
      allow create: if request.auth != null;

      // Only the authenticated user can read their own document
      allow read: if request.auth.uid == userId;

      // Admins and owners can read any user document
      allow read: if request.auth != null && isAdminOrOwner(request.auth.uid);

      // Admins and owners can update any user document
      allow update: if request.auth != null && isAdminOrOwner(request.auth.uid);

      // Push Subscriptions Subcollection
      match /pushSubscriptions/{subscriptionId} {
        // A user can manage their own subscriptions
        allow read, write, delete: if request.auth.uid == userId;
      }
    }

    // Shifts Collection
    match /shifts/{shiftId} {
      // Any authenticated user can create a shift (for testing/flexibility, tighten if needed)
      allow create: if request.auth != null;

      // Only the assigned user or an admin/owner can read a shift
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdminOrOwner(request.auth.uid));

      // The assigned user can update their shift (e.g., to change status)
      allow update: if request.auth.uid == resource.data.userId;

      // Admins/owners can update any shift
      allow update: if request.auth != null && isAdminOrOwner(request.auth.uid);

      // Admins/owners can delete shifts
      allow delete: if request.auth != null && isAdminOrOwner(request.auth.uid);
    }
    
    // Announcements Collection
    match /announcements/{announcementId} {
        // Any authenticated user can read announcements
        allow read: if request.auth != null;
        
        // Only admins/owners can create, update, or delete announcements
        allow write: if request.auth != null && isAdminOrOwner(request.auth.uid);
        
        match /acknowledgedBy/{userId} {
            // A user can only acknowledge an announcement for themselves
            allow write: if request.auth.uid == userId;
            
            // Admins/owners can read the acknowledgement list
            allow read: if request.auth != null && isAdminOrOwner(request.auth.uid);
        }
    }

    // Projects Collection
    match /projects/{projectId} {
        // Any authenticated user can read project details
        allow read: if request.auth != null;

        // Admins/owners can create, update, and delete projects
        allow write: if request.auth != null && isAdminOrOwner(request.auth.uid);
        
        // Files Subcollection
        match /files/{fileId} {
            // Any authenticated user can read files
            allow read: if request.auth != null;
            
            // Any authenticated user can upload files
            allow create: if request.auth != null;
            
            // Only the uploader or an admin/owner can delete a file
            allow delete: if request.auth != null && (resource.data.uploaderId == request.auth.uid || isAdminOrOwner(request.auth.uid));
        }
    }

    // Settings Collection
    match /settings/{settingId} {
        // Only the owner can read or write to the settings
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}
