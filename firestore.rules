rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin or owner roles
    function isPrivilegedUser(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }
    
    // Users can only read/update their own profile
    match /users/{userId} {
      allow get, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;

      // Admins/owners can read anyone's profile
      allow list, get: if isPrivilegedUser(request.auth.uid);

      // Push subscriptions can only be managed by the user themselves
      match /pushSubscriptions/{subscriptionId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Shifts can only be accessed by the assigned user or a privileged user
    match /shifts/{shiftId} {
        allow read, update, delete: if request.auth.uid == resource.data.userId || isPrivilegedUser(request.auth.uid);
        allow create: if isPrivilegedUser(request.auth.uid);
        // Privileged users can list all shifts for the schedule overview
        allow list: if isPrivilegedUser(request.auth.uid);
    }
    
    // Announcements can be read by anyone authenticated, created/updated by privileged users
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isPrivilegedUser(request.auth.uid);
    }

    // Projects can be read by anyone authenticated, created/updated by privileged users
    match /projects/{projectId} {
        allow read: if request.auth != null; 
        allow create, update, delete: if isPrivilegedUser(request.auth.uid);
        
        match /files/{fileId} {
            allow read: if request.auth != null;
            allow create: if request.auth != null;
            allow delete: if request.auth.uid == resource.data.uploaderId || isPrivilegedUser(request.auth.uid);
        }
    }
    
    // Health and Safety files can be read by anyone, managed by privileged users
    match /health_and_safety_files/{fileId} {
        allow read: if request.auth != null;
        allow create, delete: if isPrivilegedUser(request.auth.uid);
    }
  }
}
