
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // A user must be authenticated to perform any action.
    function isAuthenticated() {
      return request.auth != null;
    }

    // Checks if the authenticated user has the 'admin' or 'owner' role.
    // SAFE VERSION: Checks for document existence before accessing data.
    function isPrivilegedUser() {
      let userId = request.auth.uid;
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role in ['admin', 'owner'];
    }
    
    // Checks if the authenticated user is the 'owner'.
    function isOwner() {
      let userId = request.auth.uid;
      return isAuthenticated() &&
             exists(/databases/$(database)/documents/users/$(userId)) &&
             get(/databases/$(database)/documents/users/$(userId)).data.role == 'owner';
    }

    // Users Collection
    // - Allow users to read any profile (for name lookups).
    // - Allow users to create their own user document upon signup.
    // - Only owners can update roles.
    // - Users can update their own profile.
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId || isOwner();
      
      // Push Subscriptions Subcollection
      // A user can only manage their own notification subscriptions.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Shifts Collection
    // - All authenticated users can read shifts.
    // - Any user can update a shift assigned to them (to change its status).
    // - Only privileged users can create, fully update, or delete any shift.
    match /shifts/{shiftId} {
      allow read: if isAuthenticated();
      allow create, delete: if isPrivilegedUser();
      allow update: if isPrivilegedUser() || (isAuthenticated() && request.auth.uid == resource.data.userId);
    }

    // Announcements Collection
    // - All authenticated users can read announcements.
    // - Only privileged users can create, update, or delete announcements.
    match /announcements/{announcementId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isPrivilegedUser();
    }

    // Projects Collection
    // - All authenticated users can read project details.
    // - Only privileged users can create, update, or delete projects.
    match /projects/{projectId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isPrivilegedUser();

      // Project Files Subcollection
      // - All authenticated users can read and upload files to any project.
      // - Users can only delete their own files, but privileged users can delete any file.
      match /files/{fileId} {
        allow read, create: if isAuthenticated();
        allow delete: if (isAuthenticated() && request.auth.uid == resource.data.uploaderId) || isPrivilegedUser();
      }
    }

    // Health & Safety Files Collection
    // - All authenticated users can read (list and get) H&S files.
    // - Only the owner can upload or delete H&S files.
    match /health_and_safety_files/{fileId} {
      allow read: if isAuthenticated();
      allow create, delete: if isOwner();
    }
  }
}
