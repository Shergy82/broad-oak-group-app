rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }
    function isSelf(userId) {
      return request.auth.uid == userId;
    }
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSelf(userId);
      allow update: if isSelf(userId) || isOwner();
      allow delete: if isOwner();
    }
    
    match /users/{userId}/pushSubscriptions/{subscriptionId} {
      allow read, write: if isSelf(userId);
    }

    match /announcements/{announcementId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /projects/{projectId}/files/{fileId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isSelf(request.resource.data.uploaderId);
      allow delete: if isAdmin() || isSelf(resource.data.uploaderId);
    }

    match /shifts/{shiftId} {
      allow read: if isSelf(resource.data.userId) || isAdmin();
      allow create, delete: if isOwner();
      allow update: if isOwner() || (isSelf(resource.data.userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'notes']));
    }
  }
}
