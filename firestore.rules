
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    function isOwnerOrAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // USERS
    // All authenticated users can read their own profile.
    // Admins/Owners can read any user profile.
    // Users can update their own profile, Admins/Owners can update any.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isOwnerOrAdmin();
      allow update: if request.auth.uid == userId || isOwnerOrAdmin();
      allow create: if request.auth.uid == userId;

      // Push Subscriptions: Users can only manage their own.
      match /pushSubscriptions/{subscriptionId} {
        allow read, write, delete: if request.auth.uid == userId;
      }
    }
    
    // SHIFTS
    // Users can only read shifts assigned to them.
    // Admins/Owners can read all shifts.
    // Users can update their own shifts (e.g., status).
    // Admins/Owners can create, update, and delete any shift.
    match /shifts/{shiftId} {
        allow read: if resource.data.userId == request.auth.uid || isOwnerOrAdmin();
        allow create, update, delete: if isOwnerOrAdmin();
        allow update: if request.auth.uid == resource.data.userId && request.resource.data.keys().hasOnly(['status', 'notes']);
    }
    
    // PROJECTS & FILES
    // All authenticated users can read all projects and their files.
    // Admins/Owners can create, update, delete projects.
    // Any authenticated user can upload files.
    // Only the uploader, an Admin, or the Owner can delete a file.
    match /projects/{projectId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isOwnerOrAdmin();

        match /files/{fileId} {
            allow read, create: if request.auth != null;
            allow delete: if isOwnerOrAdmin() || resource.data.uploaderId == request.auth.uid;
        }
    }

    // ANNOUNCEMENTS
    // All authenticated users can read announcements.
    // Admins/Owners can create, update, delete announcements.
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow create, update, delete: if isOwnerOrAdmin();
    }
    
    // SETTINGS
    // Only the owner can read or write to the global settings document.
    match /settings/{docId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}

    