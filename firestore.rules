rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read/write their own profile, but only owners can change roles.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId && request.resource.data.role == resource.data.role;
    }
    
    // Owners can update any user's role (except other owners).
    match /users/{userId} {
       allow update: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner'
                      && resource.data.role != 'owner';
    }

    // Users can only read and update shifts assigned to them.
    // Admins/Owners can read/write all shifts.
    match /shifts/{shiftId} {
      allow read, update: if request.auth.uid == resource.data.userId 
                          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // All authenticated users can read announcements.
    // Only admins/owners can create, update, or delete them.
    match /announcements/{announcementId} {
        allow read: if request.auth != null;
        allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // All authenticated users can read project details.
    // Only admins/owners can create, update, or delete project documents.
    match /projects/{projectId} {
      allow read: if request.auth != null;
      allow create, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
      
      match /files/{fileId} {
        allow read: if request.auth != null;
        
        // Users can only create files with their own UID as the uploader.
        allow create: if request.auth != null && request.resource.data.uploaderId == request.auth.uid;
                      
        // Users can delete files they uploaded. Admins/owners can delete any file.
        allow delete: if request.auth != null && (resource.data.uploaderId == request.auth.uid || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner']);

        // Prevent modification of file metadata after upload.
        allow update: if false;
      }
    }
  }
}
