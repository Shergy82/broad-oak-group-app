rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check for admin/owner roles
    function isPrivileged() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'owner'];
    }

    // Rules for User Profiles
    match /users/{userId} {
      // Allow any authenticated user to create their OWN user document during sign-up
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow users to read their own profile.
      // Allow admins and owners to read any user profile.
      allow read: if request.auth != null && (request.auth.uid == userId || isPrivileged());
      
      // Only admins and owners can update or delete user profiles
      allow update, delete: if request.auth != null && isPrivileged();

      // Rules for user-specific push subscriptions
      match /pushSubscriptions/{subscriptionId} {
        // Users can manage their own subscriptions
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Rules for Shifts
    match /shifts/{shiftId} {
      // Admins/owners can create, read, update, delete any shift.
      allow read, write, delete: if request.auth != null && isPrivileged();

      // Users can read shifts assigned to them.
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Users can update the status/notes of their own shifts, but cannot re-assign them.
      allow update: if request.auth != null 
                    && resource.data.userId == request.auth.uid
                    && request.resource.data.userId == resource.data.userId; // Cannot change userId
    }

    // Rules for Announcements
    match /announcements/{announcementId} {
      // Any authenticated user can read announcements.
      allow read: if request.auth != null;
      // Only admins/owners can create, update, or delete announcements.
      allow write, delete: if request.auth != null && isPrivileged();
    }
    
    // Rules for Projects and their files
    match /projects/{projectId} {
      // Any authenticated user can read projects.
      allow read: if request.auth != null;
      // Only admins/owners can create, update, or delete projects.
      allow write, delete: if request.auth != null && isPrivileged();

      match /files/{fileId} {
        // Any authenticated user can read files.
        allow read: if request.auth != null;
        // The user who uploaded the file, or an admin/owner, can delete it.
        allow delete: if request.auth != null && (isPrivileged() || resource.data.uploaderId == request.auth.uid);
        // Any authenticated user can upload files.
        allow create: if request.auth != null;
      }
    }

    // Rules for global settings
    match /settings/{settingId} {
        // Only the owner can read or change global settings like the notification toggle.
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'owner';
    }
  }
}
