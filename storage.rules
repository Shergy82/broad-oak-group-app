rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This allows the public URLs generated by the script to work without authentication.
    match /{allPaths=**} {
      allow read;
      
      // For write, update, delete operations, we rely on the Admin SDK's
      // service account for authentication, which bypasses these rules.
      // Disallow direct client-side writes for security.
      allow write: if false;
    }
  }
}
