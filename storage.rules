rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to read and write to storage.
    // In a production app, you might tighten these rules further,
    // but this ensures the core functionality works.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
